# Copy to .env and fill values
# Firebase service account JSON (recommended on Render)
SERVICE_ACCOUNT_JSON={"type":"service_account", ... }

# OR use a credentials file path
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Admin credentials
ADMIN_EMAIL=admin@example.com
# Option A: provide plain password (less secure)
ADMIN_PASSWORD=strongpassword
# Option B: provide bcrypt hashed password
# ADMIN_PASSWORD_HASH=$2b$10$...

# JWT secret for admin tokens
ADMIN_JWT_SECRET=change_this_secret

# Optional legacy API key (x-api-key)
ADMIN_API_KEY=optional_legacy_key

PORT=3000
SQLITE_FILE=./tokens.db
